{
  "name": "@vendys/guidelines",
  "description": "변경이력, 문서, 코드 등의 작성 방법을 정의한 벤디스 가이드라인",
  "author": "Vendys Inc.",
  "bugs": {
    "url": "https://github.com/vendys/vendys-guidelines/issues"
  },
  "devDependencies": {
    "can-npm-publish": "^1.1.0",
    "commitlint": "^6.2.0",
    "fixpack": "^2.3.1",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.2",
    "markdownlint-cli": "^0.9.0",
    "rimraf": "^2.6.2"
  },
  "keywords": [
    "styleguide"
  ],
  "license": "CC-BY-4.0",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "*.md": [
      "markdownlint --config markdown/.markdownlintrc",
      "git add"
    ]
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vendys/vendys-guidelines"
  },
  "scripts": {
    "bump": "lerna publish --skip-npm",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "distclean": "rimraf node_modules changelog/tmp",
    "precommit": "lint-staged",
    "release": "lerna exec --bail=false -- 'can-npm-publish && npm publish --access public'",
    "test": "lerna run test --parallel"
  },
  "workspaces": [
    "commit-messages",
    "changelog",
    "markdown"
  ]
}
